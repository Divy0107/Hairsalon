@model IEnumerable<Hairsalon.Models.Service>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="but1">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServicePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceMaterials)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServicePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceMaterials)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ServiceId" class="btu2">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ServiceId" class="btu2">Details</a> |
             <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btu3" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
